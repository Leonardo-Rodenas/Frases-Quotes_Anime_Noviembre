<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    tools:context=".fragments.IntroFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25sp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="25sp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="@string/titulo"
        android:textSize="40sp"
        android:textStyle="bold" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressBarr"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:outlineAmbientShadowColor="#E53935"
                android:outlineSpotShadowColor="#E53935"
                app:indicatorColor="#E53935"/>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewIntroFrase"
                app:cardCornerRadius="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"

                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                tools:targetApi="p">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#97F4511E">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="30dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="cursive"
                            android:text="Anime:"
                            android:textColor="#FFFFFF"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvAnime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-smallcaps"
                            android:gravity="end"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold|italic"
                            tools:text="One Piece" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="cursive"
                            android:text="Personaje:"
                            android:textColor="#FFFFFF"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvPersonaje"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-smallcaps"
                            android:gravity="end"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold|italic"
                            tools:text="Luffy" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="cursive"
                            android:text="Frase:"
                            android:textColor="#FFFFFF"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvFrase"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-smallcaps"
                            android:gravity="end"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold|italic"
                            tools:text="Kaizoku ou ni ore wa naru" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnRandom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#D8C469"
        android:text="@string/fraseRandom"
        android:textAllCaps="false"
        android:textColor="#880E4F"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btnAnime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:backgroundTint="#D8C469"
        android:text="@string/frasePorDiezAnime"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnPersonaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:backgroundTint="#D8C469"
        android:text="@string/frasePorDiezPersonaje"
        android:textAllCaps="false" />

</LinearLayout>